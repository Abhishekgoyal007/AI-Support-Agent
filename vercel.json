{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/**/*.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/chat/history/(.*)",
            "dest": "/api/chat/[sessionId].ts"
        },
        {
            "src": "/chat/message",
            "dest": "/api/chat/message.ts"
        },
        {
            "src": "/health",
            "dest": "/api/health.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}